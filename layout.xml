<!-- layout -->

<!-- The layout defines containers -->
<!-- A container is a section of the graphic that can shows objects of archive and: -->
<!-- it has a politic of showing objects (fixed position, free position) -->
<!-- it could have limitation in objects ID (e.g. only objs with id 200x -->
<!-- More instances of containers can be on the devices but some can be limtated to one (e.g. systems) -->
<!-- All instances of a container with the same ID share this behaviours -->
<!-- The list of link to the instances of archive is an ordered list -->

<layout>
	<container id="1" descr="lights"> <!-- lights system container -->
		<ist uii="1">
			<link uii="11" />
			<link uii="4" />
			<link uii="1" />
			<link uii="2" />
			<link uii="7" />
			<link uii="5" />
			<link uii="6" />
			<link uii="10" />
			<link uii="9" />
			<!-- uii 3, 8 not inserted. Only in the archive but not visualized -->
		</ist>
	</container>
	<container id="2" > <!-- rooms -->
		<ist uii="2" descr="living room">
			<link uii="1" x="0" y="0"/>
			<!-- x,y can be absolute (pixel) or percentual -->
			<link uii="4" x="200" y="100" />
			<link uii="9" x="200" y="300" />
			<link uii="8" x="200" y="400" />
		</ist>
		<!--
		<ist uii="3" descr="bathroom">
			<link uii="6" x="200" y="100" />
			<link uii="5" x="200" y="300" />
			<link uii="4" x="200" y="400" />
		</ist>
		-->
	</container>
</layout>
