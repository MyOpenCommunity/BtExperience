<!-- layout -->

<!-- The layout defines containers -->
<!-- A container is a section of the graphic that can shows objects of archive and: -->
<!-- it has a politic of showing objects (fixed position, free position) -->
<!-- it could have limitation in objects ID (e.g. only objs with id 200x -->
<!-- More instances of containers can be on the devices but some can be limtated to one (e.g. systems) -->
<!-- All instances of a container with the same ID share this behaviours -->
<!-- The list of link to the instances of archive is an ordered list -->

<layout>
	<container id="2" > <!-- rooms -->
		<ist uii="102" descr="living room">
		</ist>
		<ist uii="103" descr="bathroom">
		</ist>

		<ist uii="104" descr="garage">
		</ist>
		<ist uii="105" descr="bedroom">
		</ist>
		<ist uii="106" descr="kitchen">
		</ist>
	</container>
	<container id="3" descr="floor" img="floor.png"> <!-- floor -->
		<ist uii="201" descr="ground" >
			<link uii="102" />
			<link uii="103" />
			<link uii="104" />
			<link uii="106" />
		</ist>
		<ist uii="202" descr="first floor" img="first.png" >
			<link uii="105" />
		</ist>
	</container>
</layout>
